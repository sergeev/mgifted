<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-signup"}) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Создане новой учетной записи</h2>
    <%= f.label :email, 'Email Address', class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Введите ваш Email' %>
    <%= f.label :password, 'Password', class: 'sr-only' %>
    <% if @minimum_password_length %>
    <em>(минимальное количество символов <%= @minimum_password_length %>)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Введите ваш Пароль' %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Подтвердите ваш Пароль' %>
    <% if devise_mapping.rememberable? -%>
      <label>
        <%= f.check_box :remember_me, label: false %>
        Запомнить меня
      </label>
    <% end -%>
    <%= f.button "Вход", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
</div>

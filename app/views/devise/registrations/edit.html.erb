<div class="container">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-edit"}) do |f| %>
  <%= devise_error_messages! %>
  <h2 class="form-signin-heading">Редактирование <%= resource_name.to_s.humanize %></h2>
    <%= f.label :email, 'Email Address', class: 'sr-only' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Введите ваш Email' %><br>
    <%= f.label :password, 'Password', class: 'sr-only' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Введите ваш новый Пароль' %><br>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Подтвердите ваш новый Пароль' %><br>
    <%= f.password_field :current_password, autocomplete: "off", class: 'form-control', placeholder: 'Подтвердите ваш старый Пароль'  %><br>
    <%= f.button "Обновить", class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
<h3>Отключить мою учетную запись</h3>
<p><%= button_to "Отключить мою учетную запись", registration_path(resource_name), data: { confirm: "Вы уверены?" }, method: :delete, class: 'btn btn-lg btn-primary btn-block' %></p>
<%= link_to "Вернуться", :back %>
</div>

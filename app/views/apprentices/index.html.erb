<h1>Listing Apprentice</h1>

<table>
  <tr>
    <th>personal_number</th>
    <th>full_name</th>
    <th></th>
  </tr>

  <% @apprentices.each do |apprentice| %>
    <tr>
      <td><%= apprentice.personal_number %></td>
      <td><%= apprentice.full_name %></td>
      <td><%= link_to 'Show', apprentice_path(apprentice) %></td>
      <td><%= link_to 'Edit', edit_apprentice_path(apprentice) %></td>
      <td><%= link_to 'Destroy', apprentice_path(apprentice),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

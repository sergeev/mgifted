              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">
                  <span data-feather="layers"></span>
                  Integrations
                </a>
              </li>
            </ul>
            </ul>
          </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

          <br></br>
          <h2>Список детей в базе данных</h2>
          <div class="table-responsive">
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Ф.И.О</th>
                  <th>Header</th>
                  <th>Header</th>
                  <th>Header</th>
                </tr>
              </thead>
              <tbody>
                <% @apprentices.each do |apprentice| %>
                <tr>
                  <td><%= apprentice.personal_number %></td>
                  <td><%= apprentice.full_name %></td>
                  <td>ipsum</td>
                  <td>dolor</td>
                  <td>sit</td>
                  <td><%= link_to 'Показать', apprentice_path(apprentice) %></td>
                  <td><%= link_to 'Редактировать', edit_apprentice_path(apprentice) %></td>
                  <td><%= link_to 'Удалить', apprentice_path(apprentice),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </main>
      </div>
    </div>


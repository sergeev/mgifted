<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Meridian Children gifted database">
    <meta name="author" content="v.sergeev.m@gmail.com">
    <link rel="icon" href="favicon.ico">
  </head>
  <body>
    <nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
      <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="">Меридиан ДБ</a>

        <%= form_tag results_path, method: :get, role: 'search' do %>
        <%= text_field_tag :query, params[:query], placeholder: 'Найти ребенка' %>
        <%= submit_tag "Искать", name: nil %>
        <% end %>
        <%= yield %>

      <!-- <input class="form-control form-control-dark w-100" type="text" placeholder="Найти ребенка в базе данных" aria-label="Search"> -->
      <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
          <% if user_signed_in? %>
              <span class="badge badge-success">Здравствуйте, <%= link_to current_user.email, edit_user_password_path %></span>
              <span class="badge badge-danger"><%= link_to 'Выйти', destroy_user_session_path, :method => :delete %></span>
          <% else %>
              <%= link_to 'Войти', new_user_session_path %> или <%= link_to 'Зарегистрироваться', new_user_registration_path %>
          <% end %>
        </li>
      </ul>
    </nav>
    <br>
    <br>
